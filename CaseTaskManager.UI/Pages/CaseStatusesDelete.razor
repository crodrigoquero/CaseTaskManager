@page "/casestatuses/delete/{Id:int}"

<h3>Delete Case Status</h3>

@if (isLoading)
{
    <p><em>Loading...</em></p>
}
else if (item is null)
{
    <div class="alert alert-warning">Case status not found.</div>
    <button class="btn btn-secondary" @onclick="Cancel">Back</button>
}
else
{
    <div class="alert alert-warning">
        <p>Are you sure you want to delete this case status?</p>
        <p>
            <strong>@item.StatusName</strong>
            @if (!string.IsNullOrWhiteSpace(item.Description))
            {
                <span> — @item.Description</span>
            }
        </p>
    </div>

    <button class="btn btn-danger me-2" @onclick="ConfirmDelete">Yes, Delete</button>
    <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
}
