@page "/cases"

<h3>All Cases</h3>

<button class="btn btn-primary mb-3" @onclick="AddNewCase">Add Case</button>

@if (allCases is null)
{
    <p><em>Loading...</em></p>
}
else if (!allCases.Any())
{
    <p>No cases found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Created</th>
                <th style="width:180px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in allCases)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Title</td>
                    <td>@c.Description</td>
                    <td>@c.CurrentStatusId</td>
                    <td>@c.CreatedAt.ToShortDateString()</td>
                    <td>
                        <button class="btn btn-warning btn-sm me-2" @onclick="@(() => EditCase(c.Id))">Edit</button>
                        <button class="btn btn-danger btn-sm" @onclick="@(() => GoToDelete(c.Id))">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
