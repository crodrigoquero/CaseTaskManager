@page "/taskstatuses" 

<h3>Task Statuses</h3>

<div class="mb-3">
    <input type="text" class="form-control" placeholder="Enter new status name" @bind="newStatusName" />
    <button class="btn btn-primary mt-2" @onclick="AddTaskStatus">Add Status</button>
</div>

@if (allStatuses.Count == 0)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status Name</th>
                <th style="width:180px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var status in allStatuses)
            {
                <tr>
                    <td>@status.Id</td>
                    <td>@status.StatusName</td>
                    <td>
                        <button class="btn btn-warning btn-sm me-2" @onclick="@(() => EditTaskStatus(status.Id))">Edit</button>
                        <button class="btn btn-danger btn-sm"  @onclick="@(() => GoToDelete(status.Id))">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
