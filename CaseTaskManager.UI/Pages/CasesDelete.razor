@page "/cases/delete/{Id:int}"

<h3>Delete Case</h3>

@if (loading)
{
    <p><em>Loading...</em></p>
}
else if (item is null)
{
    <div class="alert alert-warning">Case not found.</div>
    <button class="btn btn-secondary" @onclick="Cancel">Back</button>
}
else
{
    <div class="alert alert-danger">
        <strong>Are you sure you want to delete this case?</strong>
        <div class="mt-2">
            <div><b>Id:</b> @item.Id</div>
            <div><b>Title:</b> @item.Title</div>
            <div><b>Description:</b> @item.Description</div>
        </div>
    </div>

    <button class="btn btn-danger me-2" @onclick="Delete">Delete</button>
    <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
}
